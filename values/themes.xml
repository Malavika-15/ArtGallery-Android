<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ArtGallery" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/button_primary</item>
        <item name="colorPrimaryVariant">@color/button_secondary</item>
        <item name="android:textColor">@color/button_text</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/button_secondary</item>
        <item name="colorSecondaryVariant">@color/button_primary</item>

        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Default button style -->
        <item name="materialButtonStyle">@style/CustomButtonStyle</item>

        <!-- Text appearance -->
        <item name="textAppearanceButton">@style/TextAppearance.App.Button</item>

        <!-- Background color -->
        <item name="android:windowBackground">@color/cardview_light_background</item>
    </style>

    <!-- Custom text appearances -->
    <style name="TextAppearance.App.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.ArtGallery" parent="Base.Theme.ArtGallery" />
    <style name="Theme.ArtGallery.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="CustomButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/button_primary</item>
        <item name="android:textColor">@color/button_text</item>
        <item name="android:padding">12dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Theme.ArtGallery.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.ArtGallery.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in</item>
        <item name="android:windowExitAnimation">@anim/slide_out</item>
    </style>

</resources>